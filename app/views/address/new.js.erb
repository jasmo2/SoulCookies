var $addressListInputItems = $("#addresses-list input");
var inputRadio = $(document.createElement('input')).attr({
  type: "radio",
  name: "addresses",
  value:"<%= @address.id %>",
  id: "radio"+$addressListInputItems.length
});
var labelRadio = $(document.createElement('label')).attr({
  for: "radio"+$addressListInputItems.length
}).text("<%= @address.full_address%>");
$("#addresses-list").append(inputRadio).append(labelRadio).append(document.createElement('</br'));