<div class="container-fluid products">
  <div class="row">
  <% for product in products %>
      <%= form_tag buy_product_path(product.product_category.permalink, product.permalink), remote: true, id: "#{product.permalink}" do %>
            <div class="col-md-4">
              <div style=<%= product.default_image ? "background-image:url(#{product.default_image.path})" : ''%>>
              </div>
              <h4>
                <%= product.name %>
              </h4>
              <p class="info">
                <%= truncate product.short_description, :length => 90 %>
              </p>
              <p class="price">
                <%= number_to_currency product.price_with_tax %>
              </p>
              <p class="buttons">
                <span>Cantidad: </span>
                <%= number_field_tag 'quantity', '1', min: '1' ,class: 'special_input' %>
              </p>

              <%= button_to "Agregar" %>
            </div>
        <% end %>
      <% end %>
  </div>
</div>

<%= link_to "Ordenar", checkout_path %>