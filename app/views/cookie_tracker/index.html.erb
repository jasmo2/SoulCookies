<div class="container-fluid">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 text-center">
      <div id="cookie-tracker" class="cookie-tracker">
        <h1 class="txt-fat">¿En qué andan mis galletas?</h1>
        <p>
          Por favor, ingresa tu número de orden:
        </p>
        <%= form_tag cookie_tracker_path, method: :post, remote: true  do %>
          <div class="form-group">
            <%= label_tag 'cookie-number', 'Número de orden', class:'sr-only' %>
            <%=  number_field_tag 'cookie-number', '0', class: 'form-control'  %>
          </div>
          <%= submit_tag "Buscar" ,class: "btn-default txt-fat"%>
        <% end %>
      </div>
    </div>
  </div>
</div>